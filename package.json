{
  "name": "naruto",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev:client": "npx webpack-dev-server --mode=development --hot -c webpack.config.js",
    "dev:server": "nodemon server/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "webpack --mode=production --progress",
    "start": "node ./server/dist/index.js",
    "start:react": "webpack --mode=development",
    "test": "jest --watch",
    "lint": "npx eslint --cache --fix **/*.{js,jsx}",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naruto-rfp/naruto.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/naruto-rfp/naruto/issues"
  },
  "homepage": "https://github.com/naruto-rfp/naruto#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.5.0",
    "css-loader": "^6.7.2",
    "esbuild-jest": "^0.5.0",
    "esbuild-loader": "^2.20.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "mini-css-extract-plugin": "^2.7.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.4",
    "terser-webpack-plugin": "^5.3.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "pg": "^8.8.0",
    "pg-format": "^1.0.4",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "sequelize": "^6.25.7",
    "sequelize-cli": "^6.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/client/__mocks__/styleMock.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(axios)/)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testMatch": [
      "<rootDir>/**/*.test.(js|jsx)",
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx)|**/__tests__/*.(js|jsx))"
    ],
    "transform": {
      "^.+\\.[tj]sx?$": "esbuild-jest"
    },
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 60,
        "functions": 60,
        "lines": 60
      }
    }
  }
}
